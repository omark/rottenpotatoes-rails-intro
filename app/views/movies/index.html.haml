-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      - if @sort_by == 'title'
        %th.hilite#title_header= link_to 'Movie Title', movies_path
      - else
        %th#title_header= link_to 'Movie Title', movies_path(:sort_by => 'title')
      %th Rating
      - if @sort_by == 'release_date'
        %th.hilite#release_date_header= link_to 'Release Date', movies_path
      - else
        %th#release_date_header= link_to 'Release Date', movies_path(:sort_by => 'release_date')
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
